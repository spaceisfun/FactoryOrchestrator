  </PropertyGroup>

  <PropertyGroup Condition="'$(XES_OUTDIR)' == ''">
    <OutputPath>..\..\..\..\bin\Tests\$(Configuration)\$(Platform)\$(TargetName)</OutputPath>
  </PropertyGroup>
  <PropertyGroup Condition="'$(XES_OUTDIR)' != ''">
